{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tailwind",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "tailwind",
                "start"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Django server",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "runserver"
           ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
